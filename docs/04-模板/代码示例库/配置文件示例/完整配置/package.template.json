{
  "name": "typescript-project-template",
  "version": "1.0.0",
  "description": "3AI工作室 - TypeScript 项目模板",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:prod": "tsc --project tsconfig.prod.json",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "start:dev": "nodemon --exec ts-node src/index.ts",
    "clean": "rimraf dist coverage .nyc_output",
    "prebuild": "npm run clean",
    "postbuild": "npm run copy-assets",
    "copy-assets": "copyfiles -u 1 src/**/*.json src/**/*.yaml src/**/*.yml dist/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config jest.e2e.config.ts",
    "lint": "eslint src/**/*.{ts,tsx} --fix",
    "lint:check": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "validate": "npm run type-check && npm run lint:check && npm run format:check && npm run test:ci",
    "prepare": "husky install",
    "prepublishOnly": "npm run validate && npm run build",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "docs": "typedoc src --out docs",
    "docs:serve": "http-server docs -p 8080",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "deps:check": "ncu",
    "deps:update": "ncu -u && npm install",
    "size": "size-limit",
    "analyze": "npm run build && npx webpack-bundle-analyzer dist/stats.json"
  },
  "keywords": [
    "typescript",
    "node",
    "template",
    "3ai",
    "boilerplate"
  ],
  "author": {
    "name": "3AI工作室",
    "email": "contact@3ai.studio",
    "url": "https://3ai.studio"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/3ai-studio/typescript-template.git"
  },
  "bugs": {
    "url": "https://github.com/3ai-studio/typescript-template/issues"
  },
  "homepage": "https://github.com/3ai-studio/typescript-template#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "mongoose": "^8.0.3",
    "redis": "^4.6.10",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "rate-limiter-flexible": "^4.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/compression": "^1.7.5",
    "@types/joi": "^17.2.3",
    "@types/mongoose": "^5.11.97",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^9.1.3",
    "@jest/globals": "^29.7.0",
    "eslint": "^8.55.0",
    "@eslint/js": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-unicorn": "^49.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "standard-version": "^9.5.0",
    "rimraf": "^5.0.5",
    "copyfiles": "^2.4.1",
    "typedoc": "^0.25.4",
    "http-server": "^14.1.1",
    "npm-check-updates": "^16.14.12",
    "size-limit": "^11.0.1",
    "@size-limit/preset-node": "^11.0.1",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "jest-serializer-html": "^7.1.0",
    "jest-sonar-reporter": "^2.0.0"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run type-check && npm run test:ci"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    }
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "browserslist": [
    "node >= 18"
  ],
  "volta": {
    "node": "20.10.0",
    "npm": "10.2.3"
  },
  "packageManager": "npm@10.2.3"
}