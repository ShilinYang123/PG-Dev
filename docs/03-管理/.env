# 3AI 工作室项目环境变量示例文件
# 复制此文件为 .env 并根据实际情况修改配置

# ===========================================
# 基础配置
# ===========================================

# 运行环境 (development, production, test)
NODE_ENV=development

# 服务端口配置
PORT=3000
API_PORT=8000

# 应用基础信息
APP_NAME="3AI工作室"
APP_VERSION=1.0.0
APP_URL=http://localhost:3000
API_URL=http://localhost:8000

# ===========================================
# 数据库配置
# ===========================================

# PostgreSQL 数据库连接
DATABASE_URL=postgresql://postgres:password@localhost:5432/3AI_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=3AI_db
DB_USER=postgres
DB_PASSWORD=password

# 数据库连接池配置
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# ===========================================
# Redis 配置
# ===========================================

# Redis 连接
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Redis 会话配置
REDIS_SESSION_DB=1
SESSION_SECRET=your-session-secret-key-change-this
SESSION_MAX_AGE=86400000

# ===========================================
# 安全配置
# ===========================================

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# 加密密钥
ENCRYPTION_KEY=your-32-character-encryption-key

# CORS 配置
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ===========================================
# 文件存储配置
# ===========================================

# 本地文件存储
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt

# 云存储配置 (可选)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-s3-bucket

# ===========================================
# 邮件配置
# ===========================================

# SMTP 配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 邮件发送者信息
MAIL_FROM_NAME="3AI工作室"
MAIL_FROM_ADDRESS=noreply@3ai.studio

# ===========================================
# 日志配置
# ===========================================

# 日志级别 (error, warn, info, debug)
LOG_LEVEL=info

# 日志文件配置
LOG_DIR=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# ===========================================
# 外部服务配置
# ===========================================

# OpenAI API 配置
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# 其他AI服务配置
# ANTHROPIC_API_KEY=your-anthropic-api-key
# GOOGLE_AI_API_KEY=your-google-ai-api-key

# ===========================================
# 监控和分析配置
# ===========================================

# 应用性能监控
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-newrelic-key

# Google Analytics
# GA_TRACKING_ID=your-ga-tracking-id

# ===========================================
# 开发工具配置
# ===========================================

# 热重载配置
WEBPACK_DEV_SERVER_HOST=localhost
WEBPACK_DEV_SERVER_PORT=3000
WEBPACK_HOT_RELOAD=true

# API 文档配置
API_DOCS_ENABLED=true
API_DOCS_PATH=/docs

# 调试配置
DEBUG_MODE=true
VERBOSE_LOGGING=false

# ===========================================
# 缓存配置
# ===========================================

# 应用缓存
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# 静态资源缓存
STATIC_CACHE_MAX_AGE=31536000

# ===========================================
# 限流配置
# ===========================================

# API 限流
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 上传限流
UPLOAD_RATE_LIMIT=10

# ===========================================
# 测试配置
# ===========================================

# 测试数据库
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/3AI_test_db

# 测试环境配置
TEST_TIMEOUT=30000
TEST_COVERAGE_THRESHOLD=80

# ===========================================
# 生产环境特定配置
# ===========================================

# SSL 配置 (生产环境)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# 集群配置
# CLUSTER_WORKERS=auto

# 健康检查
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_INTERVAL=30000