{
  "name": "pg-pmc-intelligent-tracking",
  "version": "1.0.0",
  "description": "PG-PMC智能追踪系统 - AI驱动的小家电生产管理平台",
  "main": "src/main.py",
  "scripts": {
    "start": "python src/main.py",
    "dev": "python src/main.py --dev",
    "test": "python -m pytest tests/",
    "test:watch": "python -m pytest tests/ --watch",
    "test:coverage": "python -m pytest tests/ --cov=src --cov-report=html",
    "lint": "flake8 src/ tests/",
    "lint:fix": "black src/ tests/ && isort src/ tests/",
    "format": "black src/ tests/",
    "format:check": "black --check src/ tests/",
    "type-check": "mypy src/",
    "security-check": "bandit -r src/",
    "install-deps": "pip install -r requirements.txt",
    "setup-env": "python -m venv .venv && .venv\\Scripts\\activate && pip install -r requirements.txt",
    "db-init": "python src/database/init_db.py",
    "db-migrate": "python src/database/migrate.py",
    "prepare": "pre-commit install"
  },
  "keywords": [
    "ai",
    "production-management",
    "intelligent-tracking",
    "manufacturing",
    "iot",
    "scheduling",
    "warning-system",
    "pg-pmc",
    "3AI电器"
  ],
  "author": "3AI电器实业有限公司",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pg-pmc-company/intelligent-tracking.git"
  },
  "engines": {
    "python": ">=3.11.0"
  }
}
