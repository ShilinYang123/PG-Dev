# PMC全流程管理系统 - 前端环境变量配置示例
# 复制此文件为 .env.local 并根据实际情况修改配置值

# ===========================================
# 应用基本配置
# ===========================================

# 应用名称
REACT_APP_NAME=PMC全流程管理系统

# 应用版本
REACT_APP_VERSION=1.0.0

# 应用描述
REACT_APP_DESCRIPTION=PMC全流程管理系统前端应用

# ===========================================
# API配置
# ===========================================

# API基础URL
REACT_APP_API_BASE_URL=http://localhost:8000

# API版本前缀
REACT_APP_API_VERSION=/api/v1

# API请求超时时间（毫秒）
REACT_APP_API_TIMEOUT=30000

# ===========================================
# 功能开关
# ===========================================

# 是否启用Mock数据（开发环境）
REACT_APP_ENABLE_MOCK=false

# 是否启用分析统计
REACT_APP_ENABLE_ANALYTICS=false

# 是否启用性能监控
REACT_APP_ENABLE_PERFORMANCE=false

# ===========================================
# UI主题配置
# ===========================================

# 主题色
REACT_APP_PRIMARY_COLOR=#1890ff

# 布局模式 (side | top)
REACT_APP_LAYOUT=side

# 固定头部
REACT_APP_FIXED_HEADER=true

# 固定侧边栏
REACT_APP_FIXED_SIDER=true

# 色弱模式
REACT_APP_COLOR_WEAK=false

# 暗色主题
REACT_APP_DARK_THEME=false

# ===========================================
# 分页配置
# ===========================================

# 默认分页大小
REACT_APP_PAGE_SIZE=20

# 最大分页大小
REACT_APP_MAX_PAGE_SIZE=100

# ===========================================
# 文件上传配置
# ===========================================

# 最大文件大小（字节）
REACT_APP_MAX_FILE_SIZE=10485760

# 分片上传大小（字节）
REACT_APP_CHUNK_SIZE=1048576

# ===========================================
# 路由配置
# ===========================================

# 是否使用Hash路由
REACT_APP_HASH_ROUTER=false

# 路由基础路径
PUBLIC_URL=/

# ===========================================
# 缓存配置
# ===========================================

# Token缓存键名
REACT_APP_TOKEN_KEY=pmc_token

# 用户信息缓存键名
REACT_APP_USER_INFO_KEY=pmc_user_info

# 设置缓存键名
REACT_APP_SETTINGS_KEY=pmc_settings

# 缓存超时时间（毫秒）
REACT_APP_CACHE_TIMEOUT=604800000

# ===========================================
# 开发配置
# ===========================================

# 是否启用热重载
FAST_REFRESH=true

# 是否生成Source Map
GENERATE_SOURCEMAP=true

# 是否启用ESLint
ESLINT=true

# 是否启用TypeScript类型检查
TSC_COMPILE_ON_ERROR=false

# ===========================================
# 构建配置
# ===========================================

# 构建输出目录
BUILD_PATH=build

# 是否内联运行时chunk
INLINE_RUNTIME_CHUNK=false

# 图片内联大小限制（字节）
IMAGE_INLINE_SIZE_LIMIT=10000

# ===========================================
# 安全配置
# ===========================================

# 是否启用HTTPS
HTTPS=false

# SSL证书文件路径（如果启用HTTPS）
SSL_CRT_FILE=

# SSL私钥文件路径（如果启用HTTPS）
SSL_KEY_FILE=

# ===========================================
# 第三方服务配置
# ===========================================

# 百度地图API Key
REACT_APP_BAIDU_MAP_KEY=

# 高德地图API Key
REACT_APP_AMAP_KEY=

# 腾讯地图API Key
REACT_APP_TENCENT_MAP_KEY=

# 阿里云OSS配置
REACT_APP_OSS_REGION=
REACT_APP_OSS_BUCKET=
REACT_APP_OSS_ACCESS_KEY_ID=
REACT_APP_OSS_ACCESS_KEY_SECRET=

# ===========================================
# 监控和日志配置
# ===========================================

# Sentry DSN（错误监控）
REACT_APP_SENTRY_DSN=

# 日志级别 (debug | info | warn | error)
REACT_APP_LOG_LEVEL=info

# 是否启用控制台日志
REACT_APP_ENABLE_CONSOLE_LOG=true

# ===========================================
# 国际化配置
# ===========================================

# 默认语言
REACT_APP_DEFAULT_LOCALE=zh-CN

# 支持的语言列表
REACT_APP_SUPPORTED_LOCALES=zh-CN,en-US

# ===========================================
# 其他配置
# ===========================================

# 应用标题
REACT_APP_TITLE=PMC全流程管理系统

# 应用描述
REACT_APP_META_DESCRIPTION=PMC全流程管理系统，提供项目管理、流程控制、数据分析等功能

# 应用关键词
REACT_APP_META_KEYWORDS=PMC,项目管理,流程管理,数据分析

# 应用作者
REACT_APP_META_AUTHOR=PMC Team

# 网站图标路径
REACT_APP_FAVICON=/favicon.ico

# 启动页面路径
REACT_APP_SPLASH_SCREEN=/splash.html