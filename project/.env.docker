# Docker 环境配置文件
# 此文件用于 Docker Compose 环境变量配置
# 从统一配置目录读取配置值

# 项目基础配置
PROJECT_NAME=3AI
NODE_ENV=production

# 应用端口配置
PORT=3000
API_PORT=8000
VITE_PORT=5173

# 数据库配置
DB_HOST=db
DB_PORT=5432
DB_DEV_PORT=5433
DB_NAME=3AI_db
DB_USER=postgres
DB_PASSWORD=password
DATABASE_URL=postgresql://postgres:password@db:5432/3AI_db

# Redis 配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DEV_PORT=6380
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379/0

# 安全配置
JWT_SECRET=3ai-docker-secret-key
SESSION_SECRET=3ai-docker-session-secret
ENCRYPTION_KEY=3ai-docker-encryption-key

# CORS 配置
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# 文件上传配置
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf
UPLOAD_DIR=./uploads

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# 速率限制配置
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# 加密配置
BCRYPT_ROUNDS=12
SESSION_MAX_AGE=86400000

# AI 服务配置
AI_API_KEY=
AI_BASE_URL=https://api.openai.com/v1
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=2000

# 云存储配置
STORAGE_PROVIDER=local
STORAGE_BUCKET=
STORAGE_REGION=
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=

# SSL 配置
SSL_ENABLED=false
SSL_CERT=
SSL_KEY=

# 邮件配置
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=